generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContactType {
  WORK
  HOME
  PERSONAL
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Session   Session[]
  Contacts  Contact[]

  @@map("users")
}

model Session {
  id                     Int      @id @default(autoincrement())
  accessToken            String
  refreshToken           String
  accessTokenValidUntil  DateTime
  refreshTokenValidUntil DateTime

  userId Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Contact {
  id          Int         @id @default(autoincrement())
  name        String
  phoneNumber String
  email       String?
  isFavorite  Boolean?    @default(false)
  contactType ContactType @default(PERSONAL)
  photoUrl    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("contacts")
}
